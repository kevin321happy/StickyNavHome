<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar_layout" />

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/px_space_100"
        android:layout_marginRight="@dimen/px_space_100"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_one"
                android:layout_marginLeft="@dimen/px_space_200"
                android:layout_width="@dimen/px_space_150"
                android:layout_height="@dimen/px_space_150"
                android:src="@drawable/ic_user"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_one"
                android:textColor="@color/text__defaulttext"
                android:layout_marginLeft="@dimen/px_space_60"
                android:textSize="@dimen/px_space_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新建签到"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_two"
                android:layout_marginLeft="@dimen/px_space_200"
                android:layout_width="@dimen/px_space_150"
                android:layout_height="@dimen/px_space_150"
                android:src="@drawable/ic_user"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tv_two"
                android:textColor="@color/text__defaulttext"
                android:layout_marginLeft="@dimen/px_space_60"
                android:textSize="@dimen/px_space_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="历史签到"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_three"
                android:layout_marginLeft="@dimen/px_space_200"
                android:layout_width="@dimen/px_space_150"
                android:layout_height="@dimen/px_space_150"
                android:src="@drawable/ic_user"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/tv_three"
                android:textColor="@color/text__defaulttext"
                android:layout_marginLeft="@dimen/px_space_60"
                android:textSize="@dimen/px_space_50"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新建问卷"/>
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_space_40"
        android:layout_marginLeft="@dimen/px_space_40"
        android:layout_marginRight="@dimen/px_space_40"
        android:background="@drawable/bg_button"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/px_space_35" />


</LinearLayout>