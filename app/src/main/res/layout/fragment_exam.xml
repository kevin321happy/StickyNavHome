<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:stretchColumns="0,1">

        <TableRow
            android:id="@+id/tab_row">
            <TextView
                android:id="@+id/tv_all"
                android:layout_width="0dp"
                android:layout_height="@dimen/px_space_100"
                android:layout_weight="1"
                android:gravity="center"
                android:text="全部" />
            <TextView
                android:id="@+id/tv_unexam"
                android:layout_width="0dp"
                android:layout_height="@dimen/px_space_100"
                android:layout_weight="1"
                android:gravity="center"
                android:text="未考试" />

            <TextView
                android:id="@+id/tv_unpass"
                android:layout_width="0dp"
                android:layout_height="@dimen/px_space_100"
                android:layout_weight="1"
                android:gravity="center"
                android:text="未通过" />

            <TextView
                android:id="@+id/tv_reexam"
                android:layout_width="0dp"
                android:layout_height="@dimen/px_space_100"
                android:layout_weight="1"
                android:gravity="center"
                android:text="可重考" />

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="0dp"
                android:layout_height="@dimen/px_space_100"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已截止" />
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_space_2"
        android:layout_marginTop="@dimen/px_space_10"
        android:background="@color/color_999"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>