<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_space_80"
    android:paddingLeft="@dimen/px_space_30"
    android:paddingTop="@dimen/px_space_20"
    android:orientation="horizontal">


    <ImageView
        android:layout_marginLeft="@dimen/px_space_60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_red_ness" />

    <TextView
        android:layout_marginLeft="@dimen/px_space_20"
        android:id="@+id/tv_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true" />

</LinearLayout>