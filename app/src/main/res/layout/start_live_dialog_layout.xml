<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_space_550"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_shape_live_dialog"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="@dimen/px_space_60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建直播"
        android:textSize="@dimen/px_space_45"
        android:gravity="center_horizontal"/>
    
    
    <ListView
        android:id="@+id/lv_list"
        android:layout_marginTop="@dimen/px_space_40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_space_400"
       android:divider="@color/transparent"
        />

    <Button
        android:id="@+id/bt_confirm"
        android:layout_marginTop="@dimen/px_space_150"
        android:layout_marginBottom="@dimen/px_space_60"
        android:layout_width="@dimen/px_space_300"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_button"
        android:layout_height="@dimen/px_space_100"
        android:textSize="@dimen/px_space_43"
        android:text="确定"
        android:textColor="@color/white"/>

</LinearLayout>