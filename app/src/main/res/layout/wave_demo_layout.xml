<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include
        layout="@layout/common_toolbar_layout" />



    <LinearLayout
        android:id="@+id/ll_buttons"
        android:layout_marginTop="140px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_space_10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_space_90"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/px_space_20"
            android:layout_marginLeft="@dimen/px_space_10"
            android:background="@drawable/bg_button"
            android:text="课程分类" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_space_90"
            android:layout_marginRight="@dimen/px_space_20"
            android:background="@drawable/bg_button"
            android:layout_weight="1"
            android:text="课程筛选" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_space_90"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/px_space_20"
            android:background="@drawable/bg_button"
            android:text="直播类型" />

        <Button
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="@dimen/px_space_90"
            android:background="@drawable/bg_button"
            android:layout_marginRight="@dimen/px_space_10"
            android:layout_weight="1"
            android:text="选择试卷" />
        </LinearLayout>


    </LinearLayout>

    <com.wh.jxd.com.stickynavhome.widget.DynamicWave
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:layout_alignParentBottom="true" />

</RelativeLayout>