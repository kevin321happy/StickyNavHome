<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="MyViewPagerIndicator">
        <attr name="item_count" format="integer"></attr>
    </declare-styleable>

    <!--带红点的字体的自定义属性-->
    <declare-styleable name="RedTipTextView">
        <attr name="redTipVisibility">
            <enum name="visible" value="1"></enum>
            <enum name="invisible" value="0"></enum>
            <enum name="gone" value="2"></enum>
        </attr>
    </declare-styleable>


    <declare-styleable name="MultiLineChooseItemTags">

        <attr name="item_backgroundColor" format="reference|color" />
        <attr name="item_selectedBackgroundColor" format="reference|color" />

        <attr name="item_horizontalSpacing" format="dimension" />
        <attr name="item_verticalSpacing" format="dimension" />
        <attr name="item_horizontalPadding" format="dimension" />
        <attr name="item_verticalPadding" format="dimension" />

        <attr name="item_textColor" format="color" />
        <attr name="item_selectedTextColor" format="reference|color" />
        <attr name="item_textSize" format="dimension" />

        <!-- 边框圆角半径-->
        <attr name="item_radius" format="dimension" />
        <attr name="item_bottomLeftRadius" format="dimension" />
        <attr name="item_bottomRightRadius" format="dimension" />
        <attr name="item_topLeftRadius" format="dimension" />
        <attr name="item_topRightRadius" format="dimension" />
        <!-- 边框颜色-->
        <attr name="item_strokeColor" format="reference|color" />
        <attr name="item_selectedStrokeColor" format="reference|color" />
        <!-- 边框宽度-->
        <attr name="item_strokeWidth" format="dimension" />
        <!-- 是否多选-->
        <attr name="item_multiChooseable" format="boolean" />
        <attr name="item_singleLine" format="boolean" />

        <!--单位dp,为了适应wrap_content用integer-->
        <attr name="item_width" format="integer|enum">
            <enum name="wrap_content" value="-2"/>
            <enum name="match_parent" value="-1"/>
        </attr>
        <attr name="item_height" format="integer|enum">
            <enum name="wrap_content" value="-2"/>
            <enum name="match_parent" value="-1"/>
        </attr>
        <attr name="item_maxEms" format="integer" />
    </declare-styleable>


    <!--数值选择器-->
    <attr name="numberPickerStyle" format="reference"/>
    <declare-styleable name="NumberPicker">
        <attr name="np_width" format="dimension"/>
        <attr name="np_height" format="dimension"/>
        <attr name="np_dividerColor" format="color"/>
        <attr name="np_dividerDistance" format="dimension"/>
        <attr name="np_dividerThickness" format="dimension"/>
        <attr name="np_formatter" format="string"/>
        <attr name="np_max" format="integer"/>
        <attr name="np_min" format="integer"/>
        <attr name="np_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="np_textColor" format="color"/>
        <attr name="np_textSize" format="dimension"/>
        <attr name="np_typeface" format="string"/>
        <attr name="np_wheelItemCount" format="integer"/>
        <attr name="np_wrapSelectorWheel" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="wheelview">
        <attr name="gravity">
            <enum name="center" value="17"/>
            <enum name="left" value="3"/>
            <enum name="right" value="5"/>
        </attr>
        <attr name="textSize" format="dimension"/>
        <attr name="textColorOut" format="color"/>
        <attr name="textColorCenter" format="color"/>
        <attr name="dividerColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="ViewPagerIndicator">
        <attr name="item_count" />
    </declare-styleable>


    <declare-styleable name="PageGridView">
        <!--行数，如果为0表示横向显示gridview-->
        <attr name="PagingRows" format="integer" />
        <!--列数,如果为0表示纵向显示gridview-->
        <attr name="PagingColums" format="integer" />
        <attr name="PagingDiver" format="reference" />
    </declare-styleable>



</resources>