<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--去掉系统的ActionBar-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AnimUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!--多选标签的样式-->
    <style name="MultiLineChooseItemTags">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="item_backgroundColor">@color/green_dan</item>
        <item name="item_textColor">#666666</item>
        <item name="item_selectedTextColor">@color/text__defaulttext</item>
        <item name="item_selectedBackgroundColor">#9cdeef</item>
        <item name="item_textSize">14sp</item>
        <item name="item_horizontalSpacing">5dp</item>
        <item name="item_verticalSpacing">5dp</item>
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">3dp</item>
        <item name="item_radius">5dp</item>
        <item name="item_selectedStrokeColor">#356df0</item>
        <item name="item_strokeWidth">1px</item>
        <item name="item_multiChooseable">true</item>
        <item name="item_singleLine">true</item>
        <item name="item_width">80</item>
        <item name="item_height">35</item>
    </style>
    <!--不固定每个的宽度-->
    <style name="MultiLineChooseItemTags1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="item_backgroundColor">@color/green_dan</item>
        <item name="item_textColor">#666666</item>
        <item name="item_selectedTextColor">@color/text__defaulttext</item>
        <item name="item_selectedBackgroundColor">#9cdeef</item>
        <item name="item_textSize">14sp</item>
        <item name="item_horizontalSpacing">5dp</item>
        <item name="item_verticalSpacing">5dp</item>
        <item name="item_horizontalPadding">10dp</item>
        <item name="item_verticalPadding">3dp</item>
        <item name="item_radius">5dp</item>
        <item name="item_selectedStrokeColor">#356df0</item>
        <item name="item_strokeWidth">1px</item>
        <item name="item_multiChooseable">true</item>
        <item name="item_singleLine">true</item>
        <item name="item_width">wrap_content</item>
        <item name="item_height">35</item>
    </style>

</resources>
